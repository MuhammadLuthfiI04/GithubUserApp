<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GitHub_User_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/black_light</item>
        <item name="colorSecondaryVariant">@color/black_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textUsername">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textName">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>